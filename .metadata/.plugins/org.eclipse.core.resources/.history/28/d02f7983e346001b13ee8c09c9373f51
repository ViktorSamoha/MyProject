import java.util.Scanner;
import java.util.ArrayList;

public class Program {

	public static void main(String[] args) {
		Start startProgramm = new Start();
		startProgramm.startMenu();
		
	}
}
class Start{
	ArrayList<String> users = new ArrayList<String>();
	Scanner sc = new Scanner(System.in);
	void startMenu() {
		int start_menu;
		System.out.printf("1-Вход\n2-Регистрация\n");
		System.out.printf("Выберите пункт меню: ");
		start_menu = sc.nextInt();
		switch(start_menu){
			case 1:
				boolean entr = enter();
				if(entr) {
					MainMenu userMainMenu = new MainMenu();
					userMainMenu.showMenu();
				}else {
					System.out.println("Зарегистрироваться?");
					startMenu();
				}
				break;
			case 2:
				registration();
				break;
		}
	}
	boolean enter() {
		String login, password;
		Scanner sc = new Scanner(System.in);
		System.out.printf("Введите лоин: ");
		login = sc.nextLine();
		System.out.printf("Введите пароль: ");
		password = sc.nextLine();
		sc.close();
		if(this.users.contains(login)){
			if(this.users.contains(password)){
				return true;
	        }else {System.out.printf("Вы ввели неправильный пароль!");return false;}
        }else {System.out.printf("Вы ввели неправильный логин!");return false;}
    }
	void registration() {}
}
class MainMenu{
	void showMenu() {
		int main_menu;
		System.out.printf("1-Акции\n2-Магазины\n3-Рестораны\n4-Блюда\n");
		Scanner sc = new Scanner(System.in);
		System.out.println("Выберите пункт меню: ");
		main_menu = sc.nextInt();
		switch(main_menu){
			case 1:
				sc.close();
				viewStocks();
				break;
			case 2:
				sc.close();
				viewShops();
				break;
			case 3:
				sc.close();
				viewRestaurants();
				break;
			case 4:
				sc.close();
				viewFood();
				break;
		}
	}
	void viewStocks() {}
	void viewShops() {}
	void viewRestaurants() {}
	void viewFood() {}
}
class UserMenu{
	Person user;
	void showMenu() {
		int user_menu;
