		Scanner sc = new Scanner(System.in);
		System.out.println("Выберите пункт меню: ");
		user_menu = sc.nextInt();
		switch(user_menu){
			case 1:
				sc.close();
				editUser();
				break;
			case 2:
				sc.close();
				editAdress();
				break;
			case 3:
				sc.close();
				viewOrders();
				break;
			case 4:
				sc.close();
				viewDiscounts();
				break;
			case 5:
				sc.close();
				exit();
				break;
		}
	}
